# AI Document Auditing System - Environment Variables
# Copy this file to .env and fill in your API keys

# Anthropic API Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI API Configuration  
OPENAI_API_KEY=your_openai_api_key_here

# OpenRouter API Configuration (recommended for open-source access)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Application Settings
DEBUG=false
LOG_LEVEL=INFO
LOG_FILE=data/logs/app.log

# LLM Provider Settings
DEFAULT_LLM_PROVIDER=openrouter
DEFAULT_MODEL=anthropic/claude-3-haiku

# Validation Settings
CITATION_CONFIDENCE_THRESHOLD=0.8
CONTEXT_CONFIDENCE_THRESHOLD=0.7

# Data Paths
DATA_DIR=data
KNOWLEDGE_BASE_DIR=data/knowledge_bases
ARTICLES_DIR=data/generated_articles
RESULTS_DIR=data/validation_results
